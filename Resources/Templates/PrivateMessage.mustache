<!DOCTYPE html>
<meta charset="utf-8">
<meta name="viewport" content="initial-scale=1, minimum-scale=1, maximum-scale=1">

{{# baseURL }}<base href="{{.}}">{{/ }}

<title>Awful: Private message</title>

<style>
  /* Allow click events. */
  header {
    cursor: pointer;
  }
</style>

<style id="awful-inline-style">
    {{{ stylesheet }}}
</style>

<style id="awful-font-scale-style">
    {{> FontScale }}
</style>

<body class="{{ userInterfaceIdiom }}">
    <post id="{{ messageID }}" class="private-message {{# seen }}seen{{/ }} {{^ visibleAvatarURL }}no-avatar{{/ }}">
        <header {{# hiddenAvatarURL }}data-awful-avatar="{{ . }}"{{/ }}>
            {{# visibleAvatarURL }}<img class="avatar" src="{{ . }}" alt="">{{/ }}
            
            <section class="nameanddate">
                <h1 class="username">{{ fromUsername }}</h1>

                <time class="regdate">Joined {{ format.regdate(regdate) }}</time>
            </section>
        </header>
        
        <section class="postbody">
            {{{ htmlContents }}}
        </section>
        
        <footer>
            <time class="postdate">{{ format.sentDate(sentDate) }}</time>
        </footer>
    </post>
</body>
