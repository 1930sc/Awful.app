require 'open3'

FILES = "- jquery.mustache.js awful.js"

task :default => [ :assemble ]

desc "assemble posts-view.js"
task :assemble do
  Open3.popen3("cat #{FILES} > posts-view.js") do |i, _, _|
    i.print File.read("zepto.min.js").gsub("750", "500")
    i.puts <<-YO.gsub(/^ */, '')
      
      
      // Alias Zepto as jQuery to keep plugins happy.
      window.jQuery = Zepto
      
      
    YO
    i.close
  end
end
